#: kivy 1.0.9

<Jogo>:
    player: player
    start: start
    wins: wins
    percent: percent
    jogos: jogos
    label_vento: label_vento
    obst1: obst1
    obst2: obst2
    obst3: obst3
    obst4: obst4
    modelo_escolhido: modelo_escolhido

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    CustomLabel:
        id: start
        pos_hint: {'x': 0.5,'top': 0.6}
        font_size: 70
        text: 'PRESSIONE ENTER PARA INICIAR'

    CustomLabel:
        id: jogos
        pos_hint: {'x': 0.8,'top': 0.98}
        text: 'Jogos: {}'.format(root.num_jogos)
      
    CustomLabel:
        id: wins
        pos_hint: {'x': 0.8,'top': 0.93}
        text: 'Wins: {}'.format(root.num_wins)

    CustomLabel:
        id: percent
        pos_hint: {'x': 0.9,'top': 0.973}
        text: 'Acertos: {}%'.format(((root.num_wins/root.num_jogos) if root.num_jogos != 0 else 0)*100)

    CustomLabel:
        id: label_vento
        pos_hint: {'x': 0.7,'top': 0.973}
        text: 'Vento: {}'.format(root.vento)
    
    
    Barra:
        center_x: 0
        y: 0

    Jogador:
        id: player
        center_x: root.width/2
        y: 0

    Obstaculo:
        id: obst1
        center_x: root.width/2
        center_y: root.height/2
    
    Obstaculo:
        id: obst2
        center_x: root.width/5
        center_y: root.height/1.3

    Obstaculo:
        id: obst3
        center_x: root.width/1.3
        center_y: root.height/2.3

    Obstaculo:
        id: obst4
        center_x: root.width/3.2
        center_y: root.height/1.1

    ToggleButton:
        id: modelo_escolhido
        pos_hint: {'right': 1,'top': 1}
        size_hint: 0.08, 0.05
        text: 'Modelo Classico'
        group: 'modelos'
        state: 'down'


    ToggleButton:
        id: rede_neural
        text: 'Rede Neural'
        pos_hint: {'right': 1-modelo_escolhido.width/root.width,'top': 1}
        size_hint: 0.08, 0.05
        group: 'modelos'

    

    

<Ball>:
    size_hint: 0.027, 0.05
    size_hint_max: self.size
    canvas:
        Color:
            rgba: 1,0,0,1
        Ellipse:
            pos: self.pos
            size: self.size

<Obstaculo>:
    
    size_hint: 0.027/1.5, 0.05/1.5
    size_hint_max: self.size

    canvas:
        Color:
            rgba: 0,0,0,1
        Ellipse:
            pos: self.pos
            size: self.size
        
<Jogador>:
    size_hint: 0.08, 0.05
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos:self.pos
            size:self.size

<Barra>:
    size_hint: 1.1, 0.05
    canvas:
        Color:
            rgba: 0,0,1,1
        Rectangle:
            pos:self.pos
            size:self.size

<Vento>:
    size_hint: 0.05,0.003
    canvas:
        Color:
            rgba: 0,0,0,0.5
        Rectangle:
            pos:self.pos
            size:self.size


<CustomLabel@Label>:
    size_hint_max: self.size
    color: 0,0,0,1
    font_size: 24


